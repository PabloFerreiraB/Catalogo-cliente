@model CatalogoClientes.Dominio.Entidades.Cliente

<div class="well">
    <table>
        <tr>
            <td rowspan="3">
                <a href="#" class="thumbnail inner-border">
                    <img src="~/Imagens/semFoto.png" width="150" height="150" alt="Sem foto" />
                </a>
            </td>
            <td>
                <a href="#" class="btn btn-info btn-lg">
                    <strong>@Model.Nome</strong>
                </a>
            </td>
        </tr>

        <tr>
            <td>
                @Model.Email <br />
                @Model.Endereco
            </td>
        </tr>

        <tr>
            <td>
                <div class="btn-group">
                    <button type="button" class="btn btn-default">
                        @Html.ActionLink("Editar", "Edit", new
                        {
                           id=Model.ClienteId
                        })
                    </button>

                    <button type="button" class="btn btn-default">
                        @Html.ActionLink("Detalhes", "Details", new
                        {
                           id = Model.ClienteId
                        })
                    </button>

                    <button type="button" class="btn btn-default">
                        @Html.ActionLink("Deletar", "Delete", new
                        {
                           id = Model.ClienteId
                        })
                    </button>

                </div>
            </td>
        </tr>
    </table>
</div>