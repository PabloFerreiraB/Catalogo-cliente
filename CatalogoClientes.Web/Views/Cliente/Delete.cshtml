@model CatalogoClientes.Dominio.Entidades.Cliente

@{
    ViewBag.Title = "Delete";
}

<div class="clientes panel panel-primary">

    <div class="panel-heading panel-head" style="background-color: #000000; font-size: 16px;">
        Deletar cliente
    </div>

    <div class="panel-body">

        <h3>Deseja mesmo deletar esse cliente?</h3>

        <div style="margin-top: 40px">

            <dl class="dl-horizontal">
                @if (Model.Imagem != null)
                {
                    <dt>
                        Imagem
                    </dt>
                    <dd>
                        <img src="@Url.Action("ExibirImagem", "Arquivo", new
                             { id = Model.ClienteId })" width="150" height="150" alt="Foto escolhida" />
                    </dd>
                }
                else
                {
                    <dt>
                        Imagem
                    </dt>
                    <dd>
                        <img src="~/Imagens/semFoto.png" width="150" height="150" alt="Sem foto" />
                    </dd>
                }

                <dt>
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nome)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Endereco)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Endereco)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Deletar cliente" class="btn btn-danger" />
                    @Html.ActionLink("Voltar", "Catalogo", null, new { @class = "btn btn-primary" })
                </div>
            }
        </div>
    </div>
</div>
