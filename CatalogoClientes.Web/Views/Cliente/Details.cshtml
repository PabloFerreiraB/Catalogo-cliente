@model CatalogoClientes.Dominio.Entidades.Cliente

@{
    ViewBag.Title = "Details";
}

<div class="clientes panel panel-primary">

    <div class="panel-heading panel-head">
        Detalhes do cliente
    </div>

    <div class="panel-body">

        <dl class="dl-horizontal">
            @if (Model.Imagem != null)
            {
                <dt>
                    Imagem
                </dt>
                <dd>
                    <img src="@Url.Action("ExibirImagem", "Arquivo", new
                             { id = Model.ClienteId })" width="150" height="150" alt="Foto escolhida" />
                </dd>
            }
            else
            {
                <dt>
                    Imagem
                </dt>
                <dd>
                    <img src="~/Imagens/semFoto.png" width="150" height="150" alt="Sem foto" />
                </dd>
            }
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Endereco)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Endereco)
            </dd>
        </dl>

        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.ClienteId }, new { @class = "btn btn-success" })
            @Html.ActionLink("Voltar", "Catalogo", null, new { @class = "btn btn-primary" })
        </p>

    </div>
</div>
